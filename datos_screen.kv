MDScreen:
    name: 'datos_screen'
    MDFloatLayout:
        orientation: "vertical"
        MDToolbar:
            id: bar
            title: f"{app.mostrar('p_datos', True)}"
            elevation: 15
            pos_hint: {"top": 1}
        BoxLayout:
            orientation: "vertical"
            padding: "150dp"
            MDLabel:
                id: texto
                text: f"{app.mostrar('T_conf', True)}"
                halign: "left"
                font_style: "Subtitle1"
            Widget:
            MDTextField:
                id: subida
                hint_text: f"{app.mostrar('cuadro_s', True)}"
                helper_text: f"{app.mostrar('cuadro_s-a', True)}"
                helper_text_mode: "on_focus"
                mode: "rectangle"
                max_text_length: 5
            Widget:
            MDTextField:
                id: bajada
                hint_text: f"{app.mostrar('cuadro_b', True)}"
                helper_text: f"{app.mostrar('cuadro_b-a', True)}"
                helper_text_mode: "on_focus"
                mode: "rectangle"
                max_text_length: 5
        MDFillRoundFlatButton:
            id: button
            text: f"{app.mostrar('B_conf', True)}"
            font_style: "H6"
            pos_hint: {'center_x': .5, 'center_y': .2}
            on_press:
                app.guardar()