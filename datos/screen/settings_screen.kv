MDScreen:
    name: 'settings_screen'
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            id: bar
            title: f"{app.mostrar('p_ajustes', True)}"
            elevation: 15
            pos_hint: {"top": 1}
            left_action_items: [["keyboard-backspace", lambda x: app.cambio_screen("inicio_screen")]]
        MDList:
            OneLineIconListItem:
                id: oscuro
                text: f"{app.mostrar('modo_oscuro', True)}"
                on_release: app.modo_oscuro_dialog()
                IconLeftWidget:
                    icon: "theme-light-dark"
            OneLineIconListItem:
                id: conf
                text: f"{app.mostrar('b_datos', True)}"
                on_release: app.cambio_screen("datos_screen")
                IconLeftWidget:
                    icon: "cog"
                    on_release: app.cambio_screen("datos_screen")
            OneLineIconListItem:
                id: idioma
                text: f"{app.mostrar('lenguaje', True)}"
                on_release: app.idioma_configuracion_dialog()
                IconLeftWidget:
                    icon: "book-open-variant"
                    on_release: app.idioma_configuracion_dialog()
